@model IEnumerable<TiendaMotores.Models.Compra>

@{
    ViewBag.Title = "Index";
}

<h2>Compras</h2>

<table class="table table-striped">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_compra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.nombre_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion.estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_compra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.nombre_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion.estado)
            </td>
        
        </tr>
    }

</table>
